<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="muao">
        <createTable tableName="quizzes">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="int(5)"/>
            <column name="subject" type="int(5)"/>
            <column name="theme" type="int(5)"/>
            <!--<column name="questions" type="int(5)"/>-->
        </createTable>

        <createTable tableName="users">
            <column name="id" type="int(5)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="varchar(45)"/>
            <column name="pwd" type="varchar(300)"/>
            <column name="salt" type="varchar(300)"/>
        </createTable>

         <createTable tableName="subjects">
            <column name="id" type="int(5)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="subject" type="varchar(45)"/>
        </createTable>

        <createTable tableName="themes">
            <column name="id" type="int(5)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="theme" type="varchar(45)" valueSequenceCurrent=""/>
        </createTable>

         <createTable tableName="questions">
            <column name="id" type="int(5)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="themeId" type="int(5)"/>
            <column name="question" type="varchar(300)"/>
            <column name="answer" type="tinyint(5)"/>
        </createTable>

        <loadData encoding="UTF-8" file="src/main/resources/subjects.csv" tableName="subjects" separator=";">
            <column name="subject" type="STRING"/>

        </loadData>

        <!--<addForeignKeyConstraint baseTableName="quizzes" baseColumnNames="login" constraintName="fk_login_quizzes"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>-->
        <!--<addForeignKeyConstraint baseTableName="quizzes" baseColumnNames="subject" constraintName="fk_subject_quizzes"
                                 referencedTableName="subjects"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="quizzes" baseColumnNames="theme" constraintName="fk_theme_quizzes"
                                 referencedTableName="themes"
                                 referencedColumnNames="id"/>-->

    </changeSet>
</databaseChangeLog>