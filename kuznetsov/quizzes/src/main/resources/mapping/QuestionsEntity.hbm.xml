<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.kuznetsov.entities.QuestionsEntity" table="questions" schema="quiz">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="themeId">
            <column name="themeId" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="question">
            <column name="question" sql-type="varchar(300)" length="300" not-null="true"/>
        </property>
        <property name="answer">
            <column name="answer" sql-type="tinyint(5)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>