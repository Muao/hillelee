<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>jspFilter</filter-name>
        <filter-class>filters.JspFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>jspFilter</filter-name>
        <url-pattern>/view/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>quizFilter</filter-name>
        <filter-class>filters.QuizFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>quizFilter</filter-name>
        <servlet-name>quizServlet</servlet-name>
    </filter-mapping>

    <servlet>
        <servlet-name>quizServlet</servlet-name>
        <servlet-class>ui.QuizServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>quizServlet</servlet-name>
        <url-pattern>/quiz</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

</web-app>